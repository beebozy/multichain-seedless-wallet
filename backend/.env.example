PORT=3001
CHAIN_NAME=tempo
TEMPO_RPC_URL=http://127.0.0.1:8545
TEMPO_START_BLOCK=0
TEMPO_MAX_LOG_RANGE=100000
TEMPO_FEE_SPONSORED=true
TEMPO_FEE_TOKEN=0x20C0000000000000000000000000000000000000
INDEXER_ENABLED=true
INDEXER_INTERVAL_MS=30000
INDEXER_CONFIRMATIONS=1
INDEXER_REORG_WINDOW=64
VERIFIER_URL=

# Optional: if omitted, backend auto-reads onchain/DeploymentValue.txt
# TOKEN_ADDRESSES_JSON={"iUSD":"0x88aF18958231bEAeAD99E6403f50786ad96d0a9c"}
# Or single-token shortcut:
# STABLE_ADDRESS=0x88aF18958231bEAeAD99E6403f50786ad96d0a9c
# DEFAULT_STABLECOIN_SYMBOL=iUSD
# DEFAULT_STABLECOIN_DECIMALS=6

# Payment flow:
# Frontend signs with Privy embedded wallet via:
# 1) POST /v1/payments/prepare
# 2) client sendTransaction(...)
# 3) POST /v1/payments/confirm-signed
# Legacy /v1/payments/send is disabled.

# Auth hardening
AUTH_ALLOW_INSECURE_DEV=false
AUTH_JWKS_URL=
AUTH_ISSUER=
AUTH_AUDIENCE=
ADMIN_SUBS=
ADMIN_EMAILS=
METRICS_BEARER_TOKEN=

# Privy live suggestion:
# AUTH_ALLOW_INSECURE_DEV=false
# AUTH_JWKS_URL=https://auth.privy.io/api/v1/apps/<app_id>/jwks.json
# AUTH_ISSUER=https://auth.privy.io
# AUTH_AUDIENCE=<your_privy_app_id>
# NODE_ENV=production

# Custodial key encryption secret (required for custodial users)
CUSTODIAL_KEY_ENCRYPTION_SECRET=

# Notifications and delivery tracking
NOTIFY_ENABLED=true
NOTIFY_PROVIDER=log
NOTIFY_WEBHOOK_URL=
NOTIFY_RETRY_MAX=5
NOTIFY_RETRY_BASE_MS=5000
NOTIFY_WORKER_INTERVAL_MS=5000

# Optional default sender bootstrap (lets you test send immediately)
WALLET_ADDRESS=
DEPLOYER_PRIVATE_KEY=
DEFAULT_SENDER_HANDLE=owner@local

# Optional for non-custodial seeded users.
# Sender wallet private keys by user id uppercased (fallback)
WALLET_PK_USER_ALEX=
WALLET_PK_USER_JOHN=
WALLET_PK_USER_SARAH=
